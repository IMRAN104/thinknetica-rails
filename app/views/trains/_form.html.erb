<%= form_for(@train) do |f| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :current_station %>
    <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>
  
  <div class="field">
    <%= f.label :route %>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>
  
  <div class="field">
    <%= f.check_box :descending %>
    <%= f.label 'sort from tale to head' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
